---
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";

const { frontmatter } = Astro.props;

const title = "EL DIARIO DE LA ALDEA";
---

<!doctype html>
<html lang="en" class="relative h-full sm:mx-12">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <title>{title}</title>
    </head>
    <body class="sm:absolute h-full w-full bg-white flex flex-col">
        <Header title={title} subtitle="" />
        <div class="h-full">
            <div class="p-3 sm:p-10">
                <h1
                    class="px-3 sm:px-5 text-xl sm:text-5xl versalitas majerit"
                    set:html={frontmatter.title}
                />
                <h2
                    class="px-2 sm:py-5 sm:px-0 majerit text-sm"
                    set:html={(frontmatter.subtitle
                        ? frontmatter.subtitle
                        : "") + (frontmatter.link ? frontmatter.link : "")}
                />
                <slot />
            </div>
        </div>
        <Footer authors={frontmatter.authors} />
    </body>
</html>

<style is:global>
    @import url(https://db.onlinewebfonts.com/c/db4f07f18e369037f711f62b4a5201b8?family=MajeritDeck+Roman);
    .majerit {
        font-family: "MajeritDeck Roman";
    }

    .versalitas {
        font-variant: small-caps;
    }
</style>
