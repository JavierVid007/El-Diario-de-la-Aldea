---
import Layout from "./Layout.astro";
const { frontmatter } = Astro.props;
---

<Layout>
    <div class="p-3 sm:p-10">
        <h1
            class="px-3 sm:px-5 text-xl sm:text-5xl versalitas majerit"
            set:html={frontmatter.title}
        />
        <h2
            class="px-2 sm:py-5 sm:px-0 majerit text-sm"
            set:html={(frontmatter.subtitle ? frontmatter.subtitle : "") +
                (frontmatter.link ? frontmatter.link : "")}
        />
    </div>
</Layout>
